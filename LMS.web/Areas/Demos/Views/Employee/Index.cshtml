@model LMS.web.Areas.Demos.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<h4>EmployeeViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="background-color:khaki">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" style="background-color:aqua"/>
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group" style="background-color:khaki">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control"  style="background-color:aqua"/>
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group" style="background-color:khaki">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control"  style="background-color:aqua"/>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group" style="background-color:khaki">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" style="background-color:aqua" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group form-check" style="background-color:khaki">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsEnabled" style="background-color:aqua"/> @Html.DisplayNameFor(model => model.IsEnabled)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="background-color:aqua" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
